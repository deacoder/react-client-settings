{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "moduleResolution": "Bundler",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"]
}
